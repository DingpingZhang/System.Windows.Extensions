<Window x:Class="WpfApp.Net462.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Net462"
        xmlns:router="clr-namespace:WpfExtensions.Xaml.Router;assembly=WpfExtensions.Xaml"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowViewModel}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TextBox"
                     FontSize="20"
                     FontWeight="Bold"
                     Foreground="#333" />
            <Button Grid.Column="2"
                    Content="Go To"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{Binding Path=Text, ElementName=TextBox}" />
        </Grid>
        <router:BrowserRouter Grid.Row="1">
            <router:Route Path="/markup">
                <router:Route.Component>
                    <local:MarkupDemo />
                </router:Route.Component>
            </router:Route>
            <router:Route Path="/route">
                <router:Route.Component>
                    <local:RouteDemo />
                </router:Route.Component>
            </router:Route>
        </router:BrowserRouter>
    </Grid>

</Window>
